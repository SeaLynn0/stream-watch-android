<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="us.xingkong.testing">

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="26"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />




    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <service
            android:name=".serveice.LiveService"
            android:enabled="true">

        </service>

        <activity android:name=".app.activitys.LiveActivity"
            android:theme="@style/FullScreenTheme"
            android:configChanges="keyboard|orientation|screenSize"
            android:screenOrientation="sensor">

        </activity>

        <activity android:name=".app.activitys.LoginActivity"
            android:theme="@style/FullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".app.activitys.SigninActivity"
            android:theme="@style/FullScreenTheme">
        </activity>
        <activity android:name=".app.activitys.MyAppActivity">
        </activity>

        <activity android:name=".app.activitys.StreamActivity"
            android:theme="@style/FullScreenTheme"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".app.activitys.CreateAppActivity" />
        <activity android:name=".app.activitys.MainActivity" />
        <activity android:name=".app.activitys.UpdateAppActivity" />
    </application>

</manifest>